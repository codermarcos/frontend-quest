<%- partial('partial/category/header') %>
<main class="main-content">
    <section class="categories index">
        <div class="categories__container index">
            <% site.categories.forEach((category) => { %> 
                <a 
                    class="categories__category <%- url_title(category.name) %>" 
                    href="/categories/<%- url_title(category.name) %>"
                    tilte="<%= __('category') %>"><%- category.name %></a>         
            <% }) %>
        </div>
    </section>
    <section class="posts">
        <% site.categories.findOne({ name: page.category }).posts.sort('date', -1).each((post) => { %>        
            <%- partial('partial/post-item', { 
                title: post.title, 
                datetime: post.date, 
                categories: 
                post.categories, 
                description: post.description, 
                lang: post.lang 
            }) %>
        <% }) %>
    </section>
</main>